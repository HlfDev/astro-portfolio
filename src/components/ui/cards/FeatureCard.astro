---
// Feature Card
// ------------
// Description: The Card for presenting a feature
// Properties:
// - Title: the title of the card
// - Subtitle: the subtitle of the card
// - Image: the main image of the card
// - Link: The link to the blog post
// - Target: target attribute for the link (e.g., _blank)
// - Rel: rel attribute for the link (e.g., noopener noreferrer)
// Reference: https://wind-ui.com/components/cards/

// Components
// - UI
import Card from './BasicCard.astro'

// Props
type Props = {
	title?: string
	subtitle?: string
	image?: any
	link?: string
	target?: string
	rel?: string
}
const { title, subtitle, image, link, target, rel } = Astro.props
---

<Card
	title={title}
	subtitle={subtitle}
	titleSize="lg"
	link={link}
	target={target}
	rel={rel}
	image={image}
	type="image-bottom"
	classes="!bg-neutral-50 !shadow-none dark:!bg-neutral-900 h-full justify-between border border-neutral-100 dark:border-neutral-800 !p-0 text-center"
	centerContent={true}
/>
