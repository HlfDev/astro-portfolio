---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Section from '../components/ui/Section.astro'
import Row from '../components/ui/Row.astro'
import Col from '../components/ui/Col.astro'
import Button from '../components/ui/Button.astro'
import Card from '../components/ui/cards/BlogCard.astro'

// - SEO
const SEO = {
	title: 'Blog | Pedro Francisco - Software Engineer',
	description:
		"Read Pedro Francisco's insights on Flutter development, mobile app architecture, and software engineering best practices."
}

// Sample blog posts data
const blogPosts = [
	{
		title: "Getting Started with Flutter: A Beginner's Guide",
		subtitle: 'May 15, 2023',
		image: '/blog/flutter-basics.jpg',
		link: '#',
		tags: ['Flutter', 'Mobile Development', 'Beginner']
	},
	{
		title: 'State Management in Flutter: Comparing Solutions',
		subtitle: 'July 22, 2023',
		image: '/blog/state-management.jpg',
		link: '#',
		tags: ['Flutter', 'State Management', 'Architecture']
	},
	{
		title: 'Building Responsive UIs with Flutter',
		subtitle: 'September 10, 2023',
		image: '/blog/responsive-ui.jpg',
		link: '#',
		tags: ['Flutter', 'UI/UX', 'Responsive Design']
	},
	{
		title: 'Flutter Performance Optimization Tips',
		subtitle: 'November 5, 2023',
		image: '/blog/performance.jpg',
		link: '#',
		tags: ['Flutter', 'Performance', 'Optimization']
	},
	{
		title: 'Integrating RESTful APIs in Flutter Applications',
		subtitle: 'January 18, 2024',
		image: '/blog/api-integration.jpg',
		link: '#',
		tags: ['Flutter', 'APIs', 'Backend Integration']
	},
	{
		title: "Flutter vs React Native: A Developer's Perspective",
		subtitle: 'March 7, 2024',
		image: '/blog/flutter-vs-react.jpg',
		link: '#',
		tags: ['Flutter', 'React Native', 'Comparison']
	}
]
---

<Layout title={SEO.title} description={SEO.description}>
	<Section classes="bg-blue-50">
		<Row>
			<Col span="2" />
			<Col span="8">
				<h1>Flutter <strong>Insights</strong></h1>
				<p class="mb-12 text-lg">
					Thoughts, tutorials, and insights on Flutter development, mobile app
					architecture, and software engineering best practices.
				</p>
			</Col>
			<Col span="2" />
		</Row>

		<Row>
			<Col span="12">
				<div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
					{
						blogPosts.map((post) => (
							<Card
								title={post.title}
								subtitle={post.subtitle}
								image={post.image}
								link={post.link}
								tags={post.tags}
							>
								<p class="mb-4">
									{post.title.split(':')[1]
										? post.title.split(':')[1].trim()
										: 'Learn more about Flutter development techniques and best practices.'}
								</p>
							</Card>
						))
					}
				</div>
			</Col>
		</Row>

		<Row classes="mt-12">
			<Col span="12" classes="flex justify-center">
				<Button style="primary" size="lg" link="#"> Load More Articles </Button>
			</Col>
		</Row>
	</Section>
</Layout>
