---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Section from '../components/ui/Section.astro'
import Row from '../components/ui/Row.astro'
import Col from '../components/ui/Col.astro'
import Card from '../components/ui/cards/FeatureCard.astro'

// Content
// - Cards
import feature01 from '../assets/cards/feature-01.svg'
import feature02 from '../assets/cards/feature-02.svg'
import feature03 from '../assets/cards/feature-03.svg'

// - SEO
const SEO = {
	title: 'Projects | Pedro Francisco - Software Engineer',
	description:
		"Explore Pedro Francisco's portfolio of mobile application projects developed using Flutter and other technologies."
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Section classes="bg-white">
		<Row>
			<Col span="2" />
			<Col span="8">
				<h1>My <strong>Projects</strong></h1>
				<p class="mb-12 text-lg">
					A selection of mobile application projects I've worked on using Flutter and
					other technologies.
				</p>
			</Col>
			<Col span="2" />
		</Row>

		<Row>
			<Col span="4">
				<Card
					title="E-commerce Mobile App"
					subtitle="A cross-platform mobile application for fashion e-commerce, featuring product browsing, cart management, user authentication, and payment processing."
					image={feature01}
					link="#"
				/>
			</Col>
			<Col span="4">
				<Card
					title="Banking & Finance App"
					subtitle="A secure mobile banking application with features for account management, transfers, loans, and credit card services, built with Flutter and integrated with backend APIs."
					image={feature02}
					link="#"
				/>
			</Col>
			<Col span="4">
				<Card
					title="Personal Finance Tracker"
					subtitle="A mobile application for tracking personal expenses, budgeting, and financial goal setting, with data visualization and analytics features."
					image={feature03}
					link="#"
				/>
			</Col>
		</Row>
	</Section>
</Layout>
